<?xml version="1.0" encoding="utf-8"?>
<!-- Fondo para campos de texto redondeados -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fondo sÃ³lido que coincide con la superficie -->
    <solid android:color="@color/surface" />
    <!-- Bordes redondeados -->
    <corners android:radius="24dp" />
    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="@color/gray_light" />
    <!-- Espaciado interno -->
    <padding
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp"
        android:top="8dp" />
</shape>